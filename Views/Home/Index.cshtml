@model HomeViewModel
@{
    ViewBag.Title = "Movie Page";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/index.css">
</head>
<body>
    <div class="container">
        <div class="area1">
            <h1>Ajax // Movies</h1>
        </div>
        <div class="area2">
            <p>Enter the values:</p>
        </div>
        <div class="area3">
            <form method="post" asp-controller="Home" asp-action="Index">
                <label asp-for="Title">Title: </label>
                <input asp-for="Title"/>
                <span asp-validation-for="Title"></span>
                <br />

                <label asp-for="Genre">Genre: </label>
                <input asp-for="Genre"/>
                <span asp-validation-for="Genre"></span>
                <br />

                <label asp-for="RateMovie">Rate Movie: </label>
                <select asp-for="RateMovie" asp-items="Html.GetEnumSelectList<RatingMovie>()"></select>
                <span asp-validation-for="RateMovie"></span>
                <br />

                <label asp-for="Price">Price: </label>
                <input asp-for="Price" />
                <span asp-validation-for="Price"></span>
                <br />

                <label asp-for="ReleaseDate">Release Date: </label>
                <input asp-for="ReleaseDate"/>
                <span asp-validation-for="ReleaseDate"></span>
                <br />

                <label asp-for="MainCharacter">Main Character: </label>
                <input asp-for="MainCharacter"/>
                <span asp-validation-for="MainCharacter"></span>
                <br />

                <label asp-for="DirectedBy">Directed by: </label>
                <input asp-for="DirectedBy" />
                <span asp-validation-for="DirectedBy"></span>
                <br />

                <div asp-validation-summary="All"></div>
                <input type="submit" value="Add Movie" />
            </form>
        </div>
        <div class="area4">
            <h2>*Create Ajax requestes*</h2>
        </div>
    </div>
</body>
